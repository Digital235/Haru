<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="blurtic.haru.DiaryWriteActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView5"
        android:src="@drawable/bg3"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diary"
                android:id="@+id/textView3"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="확인"
                android:id="@+id/bt_ok"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="25dp"
                android:textSize="25sp"
                android:textColor="#ffc800"
                android:gravity="center_vertical|center_horizontal" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000년 0월 0일"
            android:id="@+id/txt_diaryWriteDate"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/diaryContents"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:hint="내용을 입력하세요."
            android:gravity="top"
            android:textColorHint="#cacaca"
            android:background="@null"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 To Do List"
            android:id="@+id/textView9"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center" />

        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/planListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 좋아요"
            android:id="@+id/textView10"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_gravity="center" />

        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/likeListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>
