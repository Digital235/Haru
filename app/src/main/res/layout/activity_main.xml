<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="blurtic.haru.MainActivity"
    android:background="#000000"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:id="@+id/layout_main_contents">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/layout_top_label"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000년 0월 0일"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_date"
                    android:textSize="28sp"
                    android:textColor="#ffffff" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_today_weather"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/img_todayweather"
                    android:src="@mipmap/icon_sun"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요약\n요약"
                    android:id="@+id/txt_todaysummery"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:id="@+id/imgbtn_detail"
                android:layout_gravity="right"
                android:src="@android:drawable/arrow_down_float"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                android:layout_margin="13dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_today_detail"
                android:animateLayoutChanges="true"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/horizontal_line"
                    android:background="#ffffff"
                    android:layout_marginTop="5dp" />

                <org.androidconnect.listview.horizontal.adapter.HorizontalListView
                    android:id="@+id/listview_timeweather"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#00000000"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/horizontal_line2"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날씨 상세정보 영역\n내용\n내용\n내용\n내용"
                    android:id="@+id/txt_todayweather_detail"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 추천"
                android:id="@+id/label_today_recommend"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:layout_marginLeft="26dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/horizontal_line3"
                android:background="#ffffff" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#c8000000"
                android:id="@+id/recommend_movie">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/img_movie"
                    android:src="@drawable/movie"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 영화"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/textView"
                    android:textSize="23sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/horizontal_line4"
                android:background="#ffffff" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#c8000000"
                android:id="@+id/recommend_music">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/img_music"
                    android:src="@drawable/cd_music"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 음악"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/textView2"
                    android:textSize="23sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/horizontal_line5"
                android:background="#ffffff" />

        </LinearLayout>
    </ScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="#368bda"
        fab:menu_colorPressed="#4398e7"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_buttonSpacing="2dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="down"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="메뉴"
        android:layout_gravity="right"
        android:layout_marginTop="3dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_action_menu_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting"
            fab:fab_colorNormal="#368bda"
            fab:fab_colorPressed="#4398e7"
            fab:fab_size="normal"
            fab:fab_label="설정" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_action_menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_diary"
            fab:fab_colorNormal="#368bda"
            fab:fab_colorPressed="#4398e7"
            fab:fab_size="normal"
            fab:fab_label="일기" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_action_menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            fab:fab_colorNormal="#368bda"
            fab:fab_colorPressed="#4398e7"
            fab:fab_size="normal"
            fab:fab_label="일정관리" />

    </com.github.clans.fab.FloatingActionMenu>

</FrameLayout>